{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MMORPG Class Content Schema",
  "type": "object",
  "properties": {
    "class": {"type": "string"},
    "abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "branch", "tier", "type", "description"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "branch": {"type": "string"},
          "tier": {"type": "integer", "minimum": 1, "maximum": 6},
          "type": {"type": "string", "enum": ["active", "passive", "ultimate", "exotic"]},
          "resource": {
            "type": "object",
            "properties": {
              "type": {"type": "string"},
              "cost": {"type": "number"}
            },
            "additionalProperties": false
          },
          "cooldown_s": {"type": "number"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "scaling": {"type": "object"},
          "effects": {"type": "array", "items": {"type": "object"}},
          "pvp_adjust": {"type": "object"},
          "description": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "perks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "tier", "tags", "effect", "description"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "tier": {"type": "string", "enum": ["Common", "Rare", "Epic", "Legendary"]},
          "tags": {"type": "array", "items": {"type": "string"}},
          "effect": {"type": "object"},
          "rolls": {"type": "array", "items": {"type": "object"}},
          "description": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "required": ["class", "abilities", "perks"],
  "additionalProperties": false
}

